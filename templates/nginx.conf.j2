user www-data;
include /etc/nginx/modules-enabled/*.conf;
worker_processes  1;
pid /run/nginx.pid;

events {
    worker_connections  1024;
}

# RTMP configuration
rtmp {
    server {
        listen {{ rtmp_port }}; # Listen on standard RTMP port
        chunk_size 4000;

        application ingest {
            live on;
            deny play all;
            push rtmp://127.0.0.1:1935/hls-live;
            
            access_log /var/log/nginx/rtmp-access-ingest.log;
        }


        application hls-live {
            live on;

            # Turn on HLS
            hls on;
            hls_path {{ www_root }}/live/;
            
            hls_nested on; 
            hls_playlist_length 20;
            
            hls_fragment 3;
            hls_fragment_naming system;
            
            allow publish 127.0.0.1;
            deny publish all;

            {% if deny_direct_play == 'yes' %}
            # disable consuming the stream from nginx as rtmp
            deny play all;
            {% endif %}

            access_log /var/log/nginx/rtmp-access-hls-live.log;
        }
    }
}

http {
    sendfile off;
    tcp_nopush on;
    tcp_nodelay on; 
    # aio on;
    directio 512;
    
    # keepalive_timeout 65; 
    # gzip on;
    
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # include /etc/nginx/conf.d/*.conf;

    server {
        listen {{ http_port }};
        root {{ www_root }};

        default_type text/html;
        index index.html;

        types {
            application/dash+xml mpd;
            application/vnd.apple.mpegurl m3u8;
            video/mp2t ts;
        }

        location ~ ^/live/(.+\.ts)$ {
            alias /var/www/live/$1;

            # CORS setup
            add_header Access-Control-Allow-Origin '*';
            add_header Access-Control-Allow-Methods 'GET';
            add_header Access-Control-Expose-Headers 'Content-Length';

            # allow CORS preflight requests
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' '*';
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain charset=UTF-8';
                add_header 'Content-Length' 0;
                return 204;
            }
            
            expires max;
        }
        location ~ ^/live/(.+\.m3u8)$ {
            alias /var/www/live/$1;
    
            # CORS setup
            add_header Access-Control-Allow-Origin '*';
            add_header Access-Control-Allow-Methods 'GET';
            add_header Access-Control-Expose-Headers 'Content-Length';

            # allow CORS preflight requests
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' '*';
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain charset=UTF-8';
                add_header 'Content-Length' 0;
                return 204;
            }

            expires -1d;
        }

        
        location /stats {
            rtmp_stat all;

            # Use this stylesheet to view XML as web page
            # in browser
            rtmp_stat_stylesheet /stat.xsl;
        }
        location /control {
            rtmp_control all;
        }
    }
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
}
